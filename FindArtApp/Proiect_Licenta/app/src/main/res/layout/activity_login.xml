<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundal"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="hardcodedText">


  <androidx.cardview.widget.CardView
      android:layout_width="380dp"
      android:layout_height="607dp"
      android:layout_gravity="fill"
      app:cardBackgroundColor="#C1FFFFFF"
      app:cardCornerRadius="20dp"
      app:cardElevation="10dp"
      app:cardPreventCornerOverlap="true"
      app:cardUseCompatPadding="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.728">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

<!--      <ImageView-->
<!--          android:layout_width="141dp"-->
<!--          android:layout_height="129dp"-->
<!--          android:background="@drawable/logotransparent">
</ImageView>-->

        <TextView
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:text="Welcome to \n FindArt ! \n  "
            android:textAlignment="center"
            android:textSize="33sp"
            android:textColor="@color/selected_item_color2"
            android:textStyle="bold">

        </TextView>

        <TextView
          android:layout_width="120dp"
          android:layout_height="48dp"
          android:text="Login"
          android:textStyle="bold"
            android:textColor="@color/selected_item_color"
          android:textSize="30sp"
          android:textAlignment="center">

      </TextView>

      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="10dp"
          android:textColorHint="@color/black"
          app:boxBackgroundMode="outline"
          app:boxStrokeWidth="3dp"
          app:boxStrokeWidthFocused="5dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="20sp">

        </com.google.android.material.textfield.TextInputEditText>

      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginBottom="10dp"
          android:textColorHint="@color/black"
          app:boxBackgroundMode="outline"
          app:boxStrokeWidth="3dp"
          app:boxStrokeWidthFocused="5dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="20sp">

        </com.google.android.material.textfield.TextInputEditText>

      </com.google.android.material.textfield.TextInputLayout>

      <Button
          android:id="@+id/sign_in"
          android:layout_width="163dp"
          android:layout_height="wrap_content"
          android:text="LOGIN"
          android:backgroundTint="@color/selected_item_color">

      </Button>

      <TextView
          android:layout_width="wrap_content"
          android:id="@+id/sign_up"
          android:layout_height="wrap_content"
          android:text="Don't have an account? Register here!">

      </TextView>


    </LinearLayout>


  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>